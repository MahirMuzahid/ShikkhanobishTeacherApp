<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:material="clr-namespace:XF.Material.Forms.UI;assembly=XF.Material"
              xmlns:viewmodel="clr-namespace:ShikkhanobishTeacherApp.View_Model"
             x:Class="ShikkhanobishTeacherApp.Views.TeacherRegistration">
    <ContentPage.BindingContext>
        <viewmodel:RegisterViewModel/>
    </ContentPage.BindingContext>
    <ScrollView>
        <Grid BackgroundColor="White">
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="230"/>
                <RowDefinition Height="150"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="300"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="20*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Row="0" Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="3*"/>
                </Grid.ColumnDefinitions>
                <Label Text="Register" Grid.Column="0" Grid.ColumnSpan="2" HorizontalOptions="Center" VerticalOptions="Center" FontSize="17" FontAttributes="Bold"/>
            </Grid>

            <Grid Grid.Row="1" Grid.Column="1" RowSpacing="5">
                <Grid.RowDefinitions>
                    <RowDefinition Height=".5*"/>
                    <RowDefinition Height=".01*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <Label Text="Teacher Info" Grid.Row="0" Grid.Column="0" HorizontalOptions="Start" VerticalOptions="Center"/>
                <Frame BackgroundColor="#90000000" Grid.Row="1" Grid.ColumnSpan="2"/>
                <material:MaterialTextField Placeholder="Name" Grid.Row="2" Grid.Column="0" CardBackgroundColor="Transparent" Text="{Binding name}"/>
                <material:MaterialTextField Placeholder="Phone Number" Grid.Row="2" Grid.Column="1" CardBackgroundColor="Transparent" Text="{Binding pnumber}"/>
                <material:MaterialTextField Placeholder="Passwoard" Grid.Row="3" Grid.Column="0" CardBackgroundColor="Transparent" Text="{Binding password}"/>
                <material:MaterialTextField Placeholder="Confirm Password" Grid.Row="3" Grid.Column="1" CardBackgroundColor="Transparent" Text="{Binding conFirmPassword}"/>
            </Grid>

            <Grid Grid.Row="2" Grid.Column="1" RowSpacing="5">
                <Grid.RowDefinitions>
                    <RowDefinition Height=".5*"/>
                    <RowDefinition Height=".01*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <Label Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" HorizontalOptions="Start" VerticalOptions="Center">
                    <Label.FormattedText>
                        <FormattedString>
                            <Span Text="Choose Group From Class " />
                            <Span Text="9 - 10" FontAttributes="Bold"/>
                        </FormattedString>
                    </Label.FormattedText>
                </Label>
                <Frame BackgroundColor="#90000000" Grid.Row="1" Grid.ColumnSpan="3"/>

                <material:MaterialButton Text="Science" BackgroundColor="{Binding scScColor}" Grid.Row="2" Grid.Column="0" FontSize="9" TextColor="Black" Command="{Binding popupSchool}" CommandParameter="1"/>
                <material:MaterialButton Text="Commerce" BackgroundColor="{Binding scCmColor}" Grid.Row="2" Grid.Column="1" FontSize="9" TextColor="Black" Command="{Binding popupSchool}" CommandParameter="2"/>
                <material:MaterialButton Text="Arts" BackgroundColor="{Binding scarColor}" Grid.Row="2" Grid.Column="2" FontSize="9" TextColor="Black" Command="{Binding popupSchool}" CommandParameter="3"/>
                <Grid Grid.Row="3" Grid.ColumnSpan="3">
                    <Grid.RowDefinitions >
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="1*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width=".1*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width=".1*"/>
                    </Grid.ColumnDefinitions>
                    <Label Text="No Selected Subject Yet" Grid.ColumnSpan="3"  Grid.Row="1" HorizontalOptions="Center" VerticalOptions="Center" IsVisible="{Binding noSubScMsgVsi}"/>
                    <Label Text="Subject" Grid.Column="1" Grid.ColumnSpan="3" Grid.Row="0" HorizontalOptions="Start" VerticalOptions="Center" FontSize="12"/>
                    <Label Text="{Binding sub1}" Grid.Column="1"  Grid.Row="1" HorizontalOptions="Center" VerticalOptions="Center" FontSize="12" TextColor="Black"/>
                    <Label Text="{Binding sub2}" Grid.Column="2"  Grid.Row="1" HorizontalOptions="Center" VerticalOptions="Center" FontSize="12" TextColor="Black"/>
                    <Label Text="{Binding sub3}" Grid.Column="3"  Grid.Row="1" HorizontalOptions="Center" VerticalOptions="Center" FontSize="12" TextColor="Black"/>
                </Grid>
                
            </Grid>

            <Grid Grid.Row="4" Grid.Column="1" RowSpacing="5">
                <Grid.RowDefinitions>
                    <RowDefinition Height=".5*"/>
                    <RowDefinition Height=".01*"/>
                    <RowDefinition Height=".8*"/>
                    <RowDefinition Height="3*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <Label Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" HorizontalOptions="Start" VerticalOptions="Center">
                    <Label.FormattedText>
                        <FormattedString>
                            <Span Text="Choose Group From Class " />
                            <Span Text="11 - 12" FontAttributes="Bold"/>
                        </FormattedString>
                    </Label.FormattedText>
                </Label>
                <Frame BackgroundColor="#90000000" Grid.Row="1" Grid.ColumnSpan="3"/>

                <material:MaterialButton Text="Science" BackgroundColor="{Binding clgScColor}" Grid.Row="2" Grid.Column="0" FontSize="9" TextColor="Black" Command="{Binding popupCollege}" CommandParameter="1" IsEnabled="{Binding  clgScEnabled}"/>
                <material:MaterialButton Text="Commerce" BackgroundColor="{Binding clgChColor}" Grid.Row="2" Grid.Column="1" FontSize="9" TextColor="Black" Command="{Binding popupCollege}" CommandParameter="2" IsEnabled="{Binding  clgCmEnabled}"/>
                <material:MaterialButton Text="Arts" BackgroundColor="{Binding clgArColor}" Grid.Row="2" Grid.Column="2" FontSize="9" TextColor="Black" Command="{Binding popupCollege}" CommandParameter="3" IsEnabled="{Binding  clgArEnabled}"/>
                <Grid Grid.Row="3" Grid.ColumnSpan="3">
                    <Grid.RowDefinitions >
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="1.3*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width=".1*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width=".1*"/>
                    </Grid.ColumnDefinitions>
                    <Label Text="Subject" Grid.Column="1" Grid.ColumnSpan="3" Grid.Row="0" HorizontalOptions="Start" VerticalOptions="Center" FontSize="12"/>
                    <Label Text="No Selected Subject Yet" Grid.ColumnSpan="3"  Grid.Row="1" Grid.RowSpan="2" HorizontalOptions="Center" VerticalOptions="Center" IsVisible="{Binding noSubMsgVsi}"/>
                    <Label Text="{Binding sub4}" Grid.Column="1"  Grid.Row="1" HorizontalOptions="Center" VerticalOptions="Center" FontSize="12" TextColor="Black"/>
                    <Label Text="{Binding sub5}" Grid.Column="2"  Grid.Row="1" HorizontalOptions="Center" VerticalOptions="Center" FontSize="12" TextColor="Black"/>
                    <Label Text="{Binding sub6}" Grid.Column="3"  Grid.Row="1" HorizontalOptions="Center" VerticalOptions="Center" FontSize="12" TextColor="Black"/>

                    <Label Text="{Binding sub7}" Grid.Column="1"  Grid.Row="2" HorizontalOptions="Center" VerticalOptions="Center" FontSize="12" TextColor="Black"/>
                    <Label Text="{Binding sub8}" Grid.Column="2"  Grid.Row="2" HorizontalOptions="Center" VerticalOptions="Center" FontSize="12" TextColor="Black"/>
                    <Label Text="{Binding sub9}" Grid.Column="3"  Grid.Row="2" HorizontalOptions="Center" VerticalOptions="Center" FontSize="12" TextColor="Black"/>
                    <material:MaterialButton Text="Send OTP" Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="5" IsEnabled="{Binding sendotpEnabled}" Command="{Binding comandotp}"/>
                </Grid>
            </Grid>
            
            <!--School -->
            <Grid Grid.RowSpan="5" Grid.ColumnSpan="3" BackgroundColor="#50000000" IsVisible="{Binding schholPopUpVisibility}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="3*"/>
                    <RowDefinition Height="1*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="20*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <Button BackgroundColor="Transparent" Grid.RowSpan="3" Grid.ColumnSpan="3" Command="{Binding popoutSchool}"/>
                <Grid Grid.Row="1" Grid.Column="1" BackgroundColor="White">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height=".01*"/>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="1*"/>
                    </Grid.RowDefinitions>
                    <Label Text="Choose Any Three Subject From Class 9-10" Grid.Row="0" HorizontalOptions="Center" VerticalOptions="Center"/>
                    <Frame BackgroundColor="Black" Grid.Row="1"/>
                    <material:MaterialButton Text="{Binding scsubName1}" Grid.Row="2" ButtonType="Flat" TextColor="Black" BackgroundColor="{Binding scPhyColor}" PressedBackgroundColor="#30000000" Command="{Binding schSubSelect}" CommandParameter="0"/>
                    <material:MaterialButton Text="{Binding scsubName2}" Grid.Row="3" ButtonType="Flat" TextColor="Black"  BackgroundColor="{Binding scCheColor}"  PressedBackgroundColor="#30000000" Command="{Binding schSubSelect}" CommandParameter="1"/>
                    <material:MaterialButton Text="{Binding scsubName3}" Grid.Row="4" ButtonType="Flat" TextColor="Black" BackgroundColor="{Binding scBioColor}"  PressedBackgroundColor="#30000000" Command="{Binding schSubSelect}" CommandParameter="2"/>
                    <material:MaterialButton Text="{Binding scsubName4}" Grid.Row="5" ButtonType="Flat" TextColor="Black" BackgroundColor="{Binding scMatColor}"  PressedBackgroundColor="#30000000" Command="{Binding schSubSelect}" CommandParameter="3"/>
                    <material:MaterialButton Text="{Binding scsubName5}" ButtonType="Flat" Grid.Row="6" TextColor="Black" BackgroundColor="{Binding scHmColor}"  PressedBackgroundColor="#30000000" Command="{Binding schSubSelect}" CommandParameter="4" IsEnabled="{Binding artSubEnabled}"/>
                    <material:MaterialButton Text="Save" Grid.Row="7" TextColor="White" BackgroundColor="#1ECF66" Command="{Binding schSaved}" IsEnabled="{Binding scEnabled}" />
                </Grid>
            </Grid>
            <!--College -->
            <Grid Grid.RowSpan="5" Grid.ColumnSpan="3" BackgroundColor="#50000000" IsVisible="{Binding CollegePopupVisibility}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="4*"/>
                    <RowDefinition Height="1*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="20*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <Button BackgroundColor="Transparent" Grid.RowSpan="3" Grid.ColumnSpan="3" Command="{Binding popoutCollege}"/>
                <Grid Grid.Row="1" Grid.Column="1" BackgroundColor="White">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height=".01*"/>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="1*"/>
                    </Grid.RowDefinitions>
                    <Label Text="{Binding clgpopUpTitle}" Grid.Row="0" HorizontalOptions="Center" VerticalOptions="Center"/>
                    <Frame BackgroundColor="Black" Grid.Row="1"/>
                    <material:MaterialButton Text="{Binding clgSubName1}" Grid.Row="2" ButtonType="Flat" TextColor="Black" BackgroundColor="{Binding clgPhy1st}" PressedBackgroundColor="#30000000"  Command="{Binding schClgSelect}" CommandParameter="0"/>
                    <material:MaterialButton Text="{Binding clgSubName2}" Grid.Row="3" ButtonType="Flat" TextColor="Black"  BackgroundColor="{Binding clgPhy2nd}" PressedBackgroundColor="#30000000"  Command="{Binding schClgSelect}" CommandParameter="1"/>
                    <material:MaterialButton Text="{Binding clgSubName3}" Grid.Row="4" ButtonType="Flat" TextColor="Black"  BackgroundColor="{Binding clgChe1st}"  PressedBackgroundColor="#30000000"  Command="{Binding schClgSelect}" CommandParameter="2"/>
                    <material:MaterialButton Text="{Binding clgSubName4}" Grid.Row="5" ButtonType="Flat" TextColor="Black"  BackgroundColor="{Binding clgChe2nd}" PressedBackgroundColor="#30000000"  Command="{Binding schClgSelect}" CommandParameter="3"/>
                    <material:MaterialButton Text="{Binding clgSubName5}" ButtonType="Flat" Grid.Row="6" TextColor="Black"  BackgroundColor="{Binding clgBio1st}" PressedBackgroundColor="#30000000"  Command="{Binding schClgSelect}" CommandParameter="4" IsEnabled="{Binding clgSubEnabled}"/>
                    <material:MaterialButton Text="{Binding clgSubName6}" ButtonType="Flat" Grid.Row="7" TextColor="Black"  BackgroundColor="{Binding clgBio2nd}" PressedBackgroundColor="#30000000"  Command="{Binding schClgSelect}" CommandParameter="5"  IsEnabled="{Binding clgSubEnabled}"/>
                    <material:MaterialButton Text="{Binding clgSubName7}" ButtonType="Flat" Grid.Row="8" TextColor="Black"  BackgroundColor="{Binding clgHm1st}" PressedBackgroundColor="#30000000"  Command="{Binding schClgSelect}" CommandParameter="6"  IsEnabled="{Binding clgSubEnabled}"/>
                    <material:MaterialButton Text="{Binding clgSubName8}" ButtonType="Flat" Grid.Row="9" TextColor="Black"  BackgroundColor="{Binding clgHm2nd}" PressedBackgroundColor="#30000000"  Command="{Binding schClgSelect}" CommandParameter="7"  IsEnabled="{Binding clgSubEnabled}"/>
                    <material:MaterialButton Text="Save" Grid.Row="10" TextColor="White" BackgroundColor="#1ECF66" Command="{Binding clgSaved}" IsEnabled="{Binding clgEnabled}"/>
                </Grid>
            </Grid>
            <Grid Grid.RowSpan="5" Grid.ColumnSpan="3" BackgroundColor="#50000000" IsVisible="{Binding otpWindow}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="2.5*"/>
                    <RowDefinition Height="1*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="20*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <Frame BackgroundColor="White" Grid.Row="1" Grid.ColumnSpan="3" HasShadow="False"/>
                <Grid Grid.Row="1" Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height=".8*"/>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="2.5*"/>
                        <RowDefinition Height="1.5*"/>
                        <RowDefinition Height=".1*"/>
                    </Grid.RowDefinitions>
                    <Label Grid.Row="0" HorizontalOptions="Center" VerticalOptions="Center" FontSize="12">
                        <Label.FormattedText>
                            <FormattedString>
                                <Span Text="OTP has been sent to this mobile number: "/>
                                <Span Text="{Binding pnumber}" FontAttributes="Bold"/>
                            </FormattedString>
                        </Label.FormattedText>
                    </Label>
                    <material:MaterialButton Text="Send Again in 30 second" Grid.Row="1" ButtonType="Text" HorizontalOptions="Center" VerticalOptions="Center" FontSize="10"/>
                    <material:MaterialTextField Placeholder="Enter OTP" Grid.Row="2" CardBackgroundColor="#09000000"/>
                    <material:MaterialButton Text="Veryfy" Grid.Row="3" BackgroundColor="#F89825" TextColor="White"/>
                </Grid>
            </Grid>
        </Grid>
    </ScrollView>
  
</ContentPage>