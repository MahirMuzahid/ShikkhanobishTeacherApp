                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height=".01*"/>
                        <RowDefinition Height="4*"/>
                    </Grid.RowDefinitions>
                    <material:MaterialCard Grid.RowSpan="3" Elevation="20" BackgroundColor="White"/>
