                <Label Text="Active" Grid.Row="4" HorizontalOptions="Start" VerticalOptions="Start" FontSize="22" Grid.Column="1" FontAttributes="Bold"/>
                
                <Switch IsToggled="True" Grid.Row="5" Grid.Column="1" HorizontalOptions="End" VerticalOptions="Center" OnColor="#7EE444" ThumbColor="#4DB014" />
                
            </Grid>
            <Grid Grid.Column="1" Grid.Row="0" RowSpacing="0">
